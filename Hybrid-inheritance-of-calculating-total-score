# Hybrid-inheritance-of-calculating-total-score
#include <iostream>
#include <string>
using namespace std;

class students
{
    private:
    int roll_no;
    string name;
    
    public:
    void show()
    {
       cout<<"enter your name: "<<endl;
       cin>>name;
       
       cout<<"enter your roll no: "<<endl;
       cin>>roll_no;
    }
};

class marks: public students
{
    protected:
    int maths,physics,hindi,english,chemistry;
    
    public:
    int mark()
    {
        cout<<"enter the marks you got in maths: "<<endl;
        cin>>maths;
        
        cout<<"enter the marks you got in physics: "<<endl;
        cin>>physics;
        
        cout<<"enter the marks you got in hindi: "<<endl;
        cin>>hindi;
        
        cout<<"enter the marks you got in english: "<<endl;
        cin>>english;
        
        cout<<"enter the marks you got in chemistry: "<<endl;
        cin>>chemistry;
        
        return 0;
    }
};

class sports: public students
{
    protected:
    int curriculum;
    
    public:
    int sport()
    {
        cout<<"enter the marks you got in your sports: "<<endl;
        cin>>curriculum;
        
        return 0; 
    }    
};

class result: public marks,public sports
{
    private:
    int total;
    
    public:
    int full()
    {
        total=maths+physics+hindi+english+chemistry+curriculum;
        cout<<"the total score of the student: "<<total<<endl;
        return 0;
    }
};

int main()
{
    students a;
    a.show();
    
    result d;
    d.mark();
    d.sport();
    d.full();
    
    return 0;
}
